<table class="table table-hover table-condensed">
  <tr>
    <th>#</th>
    <th>User id</th>
    <th>User name</th>
    <th>User e-mail</th>
  </tr>
  <% if @users.empty? %>
      <tr>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
      </tr>
  <% else %>
    <% @users.each.with_index(1) do |u, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= u.id %></td>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
      </tr>
    <% end %>
  <% end %>
</table>
