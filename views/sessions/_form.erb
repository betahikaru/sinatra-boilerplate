<div class="container">
  <form class="form-horizontal" action="/sessions/create" method="POST">
    <div class="form-group">
      <label for="inputId" class="col-sm-4 control-label">User ID</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="inputId" name="id" placeholder="ID">
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="col-sm-4 control-label">Password</label>
      <div class="col-sm-4">
        <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <button type="submit" class="btn btn-default">Login</button>
      </div>
    </div>
  </form>
</div>
