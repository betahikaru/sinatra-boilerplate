<% if !session[:user_id] %>
  <form class="navbar-form navbar-right" action="/sessions/login">
    <button type="submit" class="btn btn-default">Login</button>
  </form>
<% else %>
  <form class="navbar-form navbar-right" action="/sessions/destroy" method="post">
    <button type="submit" class="btn btn-default">Logout</button>
  </form>
<% end %>
